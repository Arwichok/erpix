    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Litestar",
            "type": "debugpy",
            "request": "launch",
            "module": "litestar",
            "justMyCode": true,
            "args": "run",
            "env": {
                "PYTHONPATH": "src/",
                "LITESTAR_HOST": "0.0.0.0",
                "LITESTAR_APP": "app.asgi:create_app"
            }
        }
    ]
}